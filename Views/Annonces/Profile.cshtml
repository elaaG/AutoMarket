@model AutoMarket.Models.AppUser

<h2>Profile</h2>

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Role:</strong> @Model.Role</p>

<h3>Your Ads</h3>

@if (Model.Annonces == null || !Model.Annonces.Any())
{
    <p>No ads yet.</p>
}
else
{
    <ul>
        @foreach (var a in Model.Annonces)
        {
            <li>
                <strong>@a.Titre</strong> - @a.Type
                <br />
                @a.Vehicule.Marque @a.Vehicule.Modele
            </li>
        }
    </ul>
}
