@model AutoMarket.Models.Annonce

<h2>Supprimer l'annonce</h2>

<div class="alert alert-danger">
    <strong>Attention !</strong> Cette action est irréversible.
</div>

<div class="card mb-3">
    <img src="@Model.Vehicule.PhotoPath" class="card-img-top" style="max-height:250px;object-fit:cover;" />
    <div class="card-body">
        <h5>@Model.Titre</h5>
        <p>
            <strong>Marque:</strong> @Model.Vehicule.Marque<br />
            <strong>Modèle:</strong> @Model.Vehicule.Modele<br />
            <strong>Prix:</strong> @Model.Vehicule.Prix €
        </p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button class="btn btn-danger">Confirmer la suppression</button>
    <a href="/Annonces/Dashboard" class="btn btn-secondary">Annuler</a>
</form>
