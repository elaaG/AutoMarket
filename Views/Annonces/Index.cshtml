@if (Model is IPagedList<AutoMarket.Models.Annonce>)
{
    var annonces = (IPagedList<AutoMarket.Models.Annonce>)Model;

    <div class="row mt-4">
        @foreach (var annonce in annonces)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@annonce.Vehicule.PhotoPath" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@annonce.Titre</h5>
                        <p class="card-text">
                            @annonce.Vehicule.Marque @annonce.Vehicule.Modele <br />
                            Prix: @annonce.Vehicule.Prix DT <br />
                            Kilom√©trage: @annonce.Vehicule.Kilometrage km <br />
                            Statut: @annonce.Statut
                        </p>
                        <a class="btn btn-primary" href="/Annonces/Details/@annonce.Id">Voir</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @Html.PagedListPager(annonces, page => Url.Action("Search", new { page }))

}

