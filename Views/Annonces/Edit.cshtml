@model AutoMarket.Models.ViewModels.AnnonceEditVM

@{
    ViewData["Title"] = "Modifier l'annonce";
}

<h2 class="mb-4">Modifier l'annonce</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Titre" class="form-label"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select">
            <option value="Vente">Vente</option>
            <option value="Location">Location</option>
        </select>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Marque" class="form-label"></label>
            <input asp-for="Marque" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Modele" class="form-label"></label>
            <input asp-for="Modele" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Annee" class="form-label"></label>
            <input asp-for="Annee" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Kilometrage" class="form-label"></label>
            <input asp-for="Kilometrage" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Prix" class="form-label"></label>
            <input asp-for="Prix" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="form-label">Photo du v√©hicule</label>
        <input asp-for="Photo" type="file" class="form-control" />

        @if (!string.IsNullOrEmpty(Model.ExistingPhotoPath))
        {
            <div class="mt-3">
                <p class="text-muted">Photo actuelle :</p>
                <img src="@Model.ExistingPhotoPath"
                     class="img-thumbnail"
                     style="max-height:200px;" />
            </div>
        }
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a class="btn btn-secondary" asp-action="Dashboard">
            ‚Üê Retour
        </a>

        <button type="submit" class="btn btn-primary">
            üíæ Enregistrer
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
