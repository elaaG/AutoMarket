@model List<AutoMarket.Models.Avis>

<h2>Avis</h2>

@if (!Model.Any())
{
    <p>Aucun avis pour cette annonce.</p>
}
else
{
    <ul class="list-group">
        @foreach (var a in Model)
        {
            <li class="list-group-item">
                <strong>Note:</strong> @a.Note / 5<br />
                <strong>Commentaire:</strong> @a.Commentaire<br />
                <small>@a.Date.ToShortDateString()</small>
            </li>
        }
    </ul>
}
