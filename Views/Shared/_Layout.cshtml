<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - AutoMarket</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-controller="Annonces" asp-action="Index">
            🚗 AutoMarket
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Annonces" asp-action="Index">Annonces</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Annonces" asp-action="Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Verification" asp-action="Index">Vérification</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main class="container mt-4">
    @RenderBody()
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
